{
    "buildCommand": "npm run build --workspace=packages/api && npm run build --workspace=packages/ui",
    "outputDirectory": "packages/ui/build",
    "functions": {
        "packages/api/dist/app.js": {
            "runtime": "nodejs18.x"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "packages/api/dist/app.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "packages/ui/build/index.html"
        }
    ]
}
